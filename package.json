{
  "name": "study-tracker",
  "version": "6.0.0",
  "description": "A desktop app to track your studies and tasks.",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently -k -n server,client,electron -c yellow,cyan,green \"cross-env ELECTRON=true USER_DATA_PATH=./data npx tsx server/index.ts\" \"npm run dev:client\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development npx electron .\"",
    "db:generate": "npx tsx node_modules/drizzle-kit/bin.cjs generate --config=drizzle.config.ts",
    "build": "npm run build:client && npm run build:electron",
    "start": "electron .",
    "dev:client": "vite",
    "build:client": "vite build",
    "dev:server": "node --watch server/index.ts",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push:sqlite"
  },
  "keywords": [
    "electron",
    "react",
    "vite",
    "typescript",
    "tailwindcss"
  ],
  "author": "Ahmed T. Bebars",
  "license": "MIT",
  "dependencies": {
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-progress": "^1.0.3",
    "@radix-ui/react-tooltip": "^1.0.7",
    "@tanstack/react-query": "^5.37.1",
    "better-sqlite3": "^12.2.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "dayjs": "^1.11.13",
    "drizzle-orm": "^0.44.4",
    "drizzle-zod": "^0.8.3",
    "express": "^4.19.2",
    "framer-motion": "^11.2.6",
    "lucide-react": "^0.379.0",
    "multer": "^2.0.2",
    "nanoid": "^5.1.5",
    "papaparse": "^5.4.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.51.5",
    "sqlite": "^5.1.1",
    "tailwind-merge": "^2.3.0",
    "uuid": "^11.1.0",
    "wait-on": "^8.0.4",
    "wouter": "^3.2.0",
    "xlsx": "^0.18.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.12",
    "@types/papaparse": "^5.3.14",
    "@types/react": "^18.3.2",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "cross-env": "^10.0.0",
    "drizzle-kit": "^0.31.4",
    "electron": "^30.0.9",
    "electron-vite": "^4.0.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.2",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.3",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.4.5",
    "vite": "^7.0.6"
  }
}
